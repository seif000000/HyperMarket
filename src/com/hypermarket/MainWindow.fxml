<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?xml-stylesheet type="text/css" href="scr/com/hypermarket/style.css"?>

<BorderPane prefHeight="410.0" prefWidth="351.0" style="-fx-background-color: linear-gradient(to bottom, #1E3A8A, #FFFFFF);" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.hypermarket.MainWindowController">
    <!-- Top Header -->
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: #1E3A8A; -fx-padding: 10;">
            <Label style="-fx-font-size: 28px; -fx-text-fill: white; -fx-font-family: 'Arial'; -fx-font-weight: bold;" text="HyperMarket System" HBox.hgrow="ALWAYS" />
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox alignment="CENTER" spacing="15.0" style="-fx-padding: 20;">
            <Label style="-fx-font-size: 18px; -fx-text-fill: #1E3A8A; -fx-font-family: 'Arial';" text="Welcome to Your Shopping Hub" />
            <Button fx:id="loginButton" onAction="#handleLogin" prefWidth="250" style="-fx-background-color: #3B82F6; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10;" text="Login" />
            <Button fx:id="createUserButton" onAction="#handleCreateUser" prefWidth="250" style="-fx-background-color: #10B981; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10;" text="Create New User" />
            <Button fx:id="updateDataButton" onAction="#handleUpdateData" prefWidth="250" style="-fx-background-color: #F59E0B; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10;" text="Update My Data" visible="false" />
            <Button fx:id="logoutButton" onAction="#handleLogout" prefWidth="250" style="-fx-background-color: #EF4444; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10;" text="Logout" visible="false" />
            <Button fx:id="exitButton" onAction="#handleExit" prefWidth="250" style="-fx-background-color: #6B7280; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10;" text="Exit" />
        </VBox>
    </center>

    <!-- Bottom Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #1E3A8A; -fx-padding: 10;">
            <Label style="-fx-font-size: 12px; -fx-text-fill: white; -fx-font-family: 'Arial';" text="Â© 2025 HyperMarket. All Rights Reserved." />
        </HBox>
    </bottom>
</BorderPane>
